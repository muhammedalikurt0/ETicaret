@using iskurMVC_Eticaret.Areas.Admin.Models.UserModels
@model List<UserViewModel>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>User Index</h2>


<div class="row">
    <div class="col-md-12">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        UserID
                    </th>
                    <th>
                        UserName
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        E-mail
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.UserID
                        </td>
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            @item.Phone
                        </td>
                        <td>
                            @item.EPosta
                        </td>
                        <td>
                            <a href="/Admin/User/Update/@item.UserID" class="btn btn-primary">Update</a>
                            <a href="/Admin/User/Delete/@item.UserID" class="btn btn-danger">Delete</a>
                            <a href="/Admin/Role/Index/@item.UserID" class="btn btn-success">Authorization</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Admin/User/Insert" type="button" class="btn btn-success">Insert</a>



    </div>
</div>
