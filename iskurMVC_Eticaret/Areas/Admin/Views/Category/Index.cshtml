@using iskurMVC_Eticaret.Areas.Admin.Models.CategoriesModels
@model List<CategoryViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Categories</h2>
<div class="row">
    <div class="col-md-12">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>CategoryID</th>
                    <th>CategoryName</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryID</td>
                        <td>@item.CategoryName</td>
                        <td>
                            <a href="/Admin/Category/Update/@item.CategoryID" class="btn btn-primary">Update</a>
                            <a href="/Admin/Category/Delete/@item.CategoryID" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Admin/Category/Insert" class="btn btn-success">Insert</a>
    </div>
</div>