@using iskurMVC_Eticaret.Models
@model List<AddressModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<div class="container">

    <div class="row">
        <div class="col-lg-3">
            <!-- /Left Menu -->
            @Html.Partial("_UserPartial")
        </div>

        <div class="col-lg-9">

            @using (Html.BeginForm("Address", "Index"))
            {
                <br />
                <h4>Adres Bilgileri</h4>
                <br />
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Adres</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item._Address</td>
                                <td><a href="" class="btn btn-primary">Güncelle</a><a href="" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <a href="/Address/Insert" type="submit" class="btn btn-success">Ekle</a>
            }

        </div>
    </div>
</div>
