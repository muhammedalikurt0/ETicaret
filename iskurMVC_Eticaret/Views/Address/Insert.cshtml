@using iskurMVC_Eticaret.Models
@model AddressModel

@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-lg-3">
            <!-- /Left Menu -->
            @Html.Partial("_UserPartial")
        </div>

        <div class="col-lg-9">
            <br />
            <h5>Adres Ekle</h5>
            <br />
            @using (Html.BeginForm("Insert", "Address"))
            {
                <div class="form-group">
                    <span>Başlık</span>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control col-sm-5" })
                </div>
                <div class="form-group">
                    <span>Adres</span>
                    @Html.TextAreaFor(x => x._Address, new { @class = "form-control col-sm-5" })
                </div>
                <button type="submit" class="btn btn-success">Insert</button>
            }
        </div>
    </div>
</div>