@using iskurMVC_Eticaret.Models

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/shop-homepage.css" rel="stylesheet" />
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    @{
        var quantity = 0;
        if (Session["Cart"] != null)
        {
            List<ShoppingCart> shoppingCartList = (List<ShoppingCart>)Session["Cart"];
            quantity = shoppingCartList.Count;
        }
    }
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Main/Index">Mobilya.com</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Main/Index">
                            Anasayfa
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            Hakkımızda
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    @{
                        if (Session["User"] == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Log/Create">Üye Ol</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Log/Login">Giriş Yap</a>
                            </li>
                        }
                        else
                        {
                            LoginModel loginModel = (LoginModel)Session["User"];
                            <li class="nav-item">
                                <a href="/Users/Profil" class="nav-link">@loginModel.UserName</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Log/Exit">Exit</a>
                            </li>
                        }
                    }
                    <li class="nav-item">
                        <a href="/Cart/Index">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                            <span id="shoppingCart" class="badge badge-primary">
                                @quantity
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Buğra Toprak</p>
        </footer>
    </div>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
</body>
</html>

<script type="text/javascript">

</script>
